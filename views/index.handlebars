				      	<label for="content">Content:</label>
				     	<input type="text" class="form-control" id="content" placeholder="Content" name="content">
				    </div>
				   	<a name="bottom">
				    <button type="button" id="newPostSubmitButton" class="btn btn-default">Post</button>
				</form>
			</div>
		</div>
