				     	<input type="text" class="form-control" id="content" name="password">
				     	<label for="passwordconfirm">Confirm Password</label>
				     	<input type="text" class="form-control" id="content" name="passwordconfirm">
				    </div>
				    <input type="submit" id="submitBtn" class="btn btn-default" value="Register"></input>
				</form>
			</div>
		</div>
